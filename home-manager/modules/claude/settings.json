{
  "env": {
    "DISABLE_AUTOUPDATER": "1"
  },
  "permissions": {
    "allow": [
      "Bash(notify:*)",
      "Bash(gh pr list:*)",
      "Bash(gh pr view:*)",
      "Bash(gh pr checks:*)",
      "Bash(jj log:*)",
      "Bash(jj show:*)",
      "Bash(jj diff:*)",
      "Bash(jj commit:*)",
      "Bash(jj new:*)",
      "Bash(jj-main-branch:*)",
      "Bash(jj-current-branch:*)",
      "Bash(jj-prev-branch:*)",
      "Bash(jj-stacked-branches:*)",
      "Bash(jj-diff-working:*)",
      "Bash(jj-diff-branch:*)",
      "Bash(jj-stacked-stats:*)",

      "Edit(~/Library/Caches/**)",
      "Edit(~/.cache/**)",
      "Edit(~/.claude/**)",
      "Edit(~/.cargo/**)",
      "Edit(~/.npm/**)",
      "Edit(~/go/**)",
      "Edit(~/dotfiles/**)"
    ]
  },
  "hooks": {
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "jq -r '.message' | xargs -I _ notify \"_\""
          }
        ]
      }
    ]
  },
  "alwaysThinkingEnabled": true,
  "sandbox": {
    "enabled": true,
    "autoAllowBashIfSandboxed": true
  }
}
