{
  "permissions": {
    "allow": [
      "Bash(notify:*)",
      "Bash(gh pr list:*)",
      "Bash(gh pr view:*)",
      "Bash(gh pr checks:*)"
    ]
  },
  "model": "sonnet",
  "hooks": {
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "jq -r '.message' | xargs -I _ notify \"_\""
          }
        ]
      }
    ]
  }
}