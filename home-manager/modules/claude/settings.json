{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "Bash(notify:*)",
      "Bash(lsof:*)",
      "Bash(gh pr list:*)",
      "Bash(gh pr view:*)",
      "Bash(gh pr checks:*)",
      "Bash(jj log:*)",
      "Bash(jj show:*)",
      "Bash(jj diff:*)",
      "Bash(jj commit:*)",
      "Bash(jj status:*)",
      "Bash(jj new:*)",
      "Bash(jj-main-branch:*)",
      "Bash(jj-current-branch:*)",
      "Bash(jj-prev-branch:*)",
      "Bash(jj-stacked-branches:*)",
      "Bash(jj-diff-working:*)",
      "Bash(jj-diff-branch:*)",
      "Bash(jj-stacked-stats:*)",
      "Bash(claude-proj-docs:*)",
      "Bash(nix eval:*)",
      "Bash(nix build:*)",
      "Bash(nix flake:*)",
      "Bash(nix develop:*)",
      "Bash(nix run:*)",
      "Bash(nix shell:*)",
      "Bash(readlink:*)",
      "Read(~/Library/Caches/**)",
      "Edit(~/Library/Caches/**)",
      "Read(~/.cache/**)",
      "Edit(~/.cache/**)",
      "Read(~/.claude/**)",
      "Edit(~/.claude/**)",
      "Read(~/.cargo/**)",
      "Edit(~/.cargo/**)",
      "Read(~/.npm/**)",
      "Edit(~/.npm/**)",
      "Read(~/go/**)",
      "Edit(~/go/**)",
      "Read(~/dotfiles/**)",
      "Edit(~/dotfiles/**)",
      "Read(/tmp/**)",
      "Edit(/tmp/**)",
      "Read(/nix/**)",

      "WebSearch",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:api.github.com)",
      "WebFetch(domain:raw.githubusercontent.com)",
      "WebFetch(domain:gist.github.com)",
      "WebFetch(domain:codeload.github.com)",
      "WebFetch(domain:channels.nixos.org)",
      "WebFetch(domain:registry.npmjs.org)",
      "WebFetch(domain:code.claude.com)",
      "WebFetch(domain:www.anthropic.com)",
      "WebFetch(domain:wiki.nixos.org)",

      "Skill(mem-edit)",

      "SlashCommand(/ctx-load)",
      "Skill(ctx-load)",
      "SlashCommand(/ctx-save)",
      "Skill(ctx-save)",
      "SlashCommand(/review-search)",
      "Skill(review-search)"
    ]
  },
  "hooks": {
    "UserPromptSubmit": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "claude-tmux-indicator on UserPromptSubmit"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "claude-tmux-indicator off Stop"
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "claude-tmux-indicator off SessionEnd"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "claude-tmux-indicator on PostToolUse"
          }
        ]
      }
    ],
    "PermissionRequest": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "claude-tmux-indicator permission PermissionRequest"
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "matcher": "compact",
        "hooks": [
          {
            "type": "command",
            "command": "echo '{\"additionalContext\": \"COMPACTION JUST OCCURRED. You MUST run /ctx-load NOW before any other action to reload project context.\"}'"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "jq -r '.message' | xargs -I _ notify \"_\""
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "~/.claude/statusline.sh"
  },
  "sandbox": {
    "enabled": true,
    "autoAllowBashIfSandboxed": true,
    "network": {
      "allowUnixSockets": [
        "/nix/var/nix/daemon-socket/socket"
      ],
      "allowLocalBinding": true
    }
  },
  "alwaysThinkingEnabled": true,
  "enabledPlugins": {
    "plugin-dev@claude-plugins-official": true
  },
  "env": {
    "DISABLE_AUTOUPDATER": "1"
  }
}
