{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "env": {
    "DISABLE_AUTOUPDATER": "1"
  },
  "permissions": {
    "allow": [
      "mcp__ide__getDiagnostics",

      "Bash(notify:*)",
      "Bash(lsof:*)",
      "Bash(readlink:*)",
      "Bash(echo $?)",
      "Bash(grep:*)",
      "Bash(rg:*)",

      "Bash(jj log:*)",
      "Bash(jj show:*)",
      "Bash(jj diff:*)",
      "Bash(jj status:*)",
      "Bash(jj commit:*)",
      "Bash(jj new:*)",
      "Bash(jj-main-branch:*)",
      "Bash(jj-current-branch:*)",
      "Bash(jj-prev-branch:*)",
      "Bash(jj-stacked-branches:*)",
      "Bash(jj-diff-working:*)",
      "Bash(jj-diff-branch:*)",
      "Bash(jj-stacked-stats:*)",
      "Bash(claude-proj-docs:*)",

      "Bash(gh pr list:*)",
      "Bash(gh pr view:*)",
      "Bash(gh pr checks:*)",
      "Bash(gh pr diff:*)",
      "Bash(gh pr review:*)",

      "Bash(nix eval:*)",
      "Bash(nix build:*)",
      "Bash(nix flake:*)",
      "Bash(nix develop:*)",
      "Bash(nix run:*)",
      "Bash(nix shell:*)",
      "Bash(nix repl:*)",

      "Bash(cargo test:*)",
      "Bash(cargo check:*)",
      "Bash(cargo clippy:*)",
      "Bash(cargo fmt:*)",
      "Bash(cargo build:*)",
      "Bash(cargo tree:*)",

      "Bash(go build:*)",
      "Bash(go fmt:*)",
      "Bash(go mod:*)",
      "Bash(go test:*)",
      "Bash(go doc:*)",
      "Bash(go vet:*)",

      "Bash(npm run build:*)",
      "Bash(npm run lint:*)",
      "Bash(npm run test:*)",

      "Edit(~/Library/Caches/**)",
      "Edit(~/.cache/**)",
      "Edit(~/.cargo/**)",
      "Edit(~/.npm/**)",
      "Edit(~/go/**)",
      "Edit(~/dotfiles/**)",
      "Edit(/tmp/**)",

      "WebSearch",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:api.github.com)",
      "WebFetch(domain:raw.githubusercontent.com)",
      "WebFetch(domain:gist.github.com)",
      "WebFetch(domain:codeload.github.com)",
      "WebFetch(domain:channels.nixos.org)",
      "WebFetch(domain:registry.npmjs.org)",
      "WebFetch(domain:code.claude.com)",
      "WebFetch(domain:www.anthropic.com)",
      "WebFetch(domain:wiki.nixos.org)",
      "WebFetch(domain:proxy.golang.org)",
      "WebFetch(domain:sum.golang.org)",
      "WebFetch(domain:stackoverflow.com)",

      "Read(~/.claude/**)",
      "Skill(ctx-load)",
      "Skill(ctx-save)",
      "Skill(review-search)",
      "Skill(mem-editing)",
      "Skill(proj-editing)"
    ],
    "deny": [],
    "defaultMode": "acceptEdits",
    "additionalDirectories": [
      "/home/appaquet/dotfiles"
    ]
  },
  "hooks": {
    "UserPromptSubmit": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "claude-tmux-indicator on UserPromptSubmit"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "claude-tmux-indicator off Stop"
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "claude-tmux-indicator off SessionEnd"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "claude-tmux-indicator on PostToolUse"
          }
        ]
      }
    ],
    "PermissionRequest": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "claude-tmux-indicator permission PermissionRequest"
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "matcher": "compact",
        "hooks": [
          {
            "type": "command",
            "command": "echo '{\"additionalContext\": \"COMPACTION JUST OCCURRED. You MUST run /ctx-load NOW before any other action to reload project context.\"}'"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "jq -r '.message' | xargs -I _ notify \"_\""
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "~/.claude/statusline.sh"
  },
  "enabledPlugins": {
    "plugin-dev@claude-plugins-official": true
  },
  "sandbox": {
    "enabled": true,
    "autoAllowBashIfSandboxed": true,
    "network": {
      "allowUnixSockets": [
        "/nix/var/nix/daemon-socket/socket"
      ],
      "allowLocalBinding": true
    }
  },
  "alwaysThinkingEnabled": true
}
